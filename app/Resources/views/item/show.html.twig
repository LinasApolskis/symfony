{% extends 'base.html.twig' %}

{% block body %}
    <h1>Item</h1>

    <table>
        <tbody>
            <tr>
                <th>Index</th>
                <td>{{ item.index }}</td>
            </tr>
            <tr>
                <th>Index_start_at</th>
                <td>{{ item.indexstartat }}</td>
            </tr>
            <tr>
                <th>Integer</th>
                <td>{{ item.integer }}</td>
            </tr>
            <tr>
                <th>Float</th>
                <td>{{ item.float }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ item.surname }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ item.fullname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ item.email }}</td>
            </tr>
            <tr>
                <th>Bool</th>
                <td>{% if item.bool %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('item_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('item_edit', { 'index': item.index }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
