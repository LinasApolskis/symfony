{% extends 'base.html.twig' %}
{% block body %}
    <ul>
            <button type="button" class="btn btn-light">
            <a href="{{ path('item_new') }}">Create a new item</a></button>
    </ul>
<table>

    {# table body #}
    <table class="table table-bordered">
        <thead>
    <tr>
        <th scope="col">Index</th>
        <th scope="col">Index_start_at</th>
        <th scope="col">Integer</th>
        <th scope="col">Float</th>
        <th scope="col">Name</th>
        <th scope="col">Surname</th>
        <th scope="col">Fullname</th>
        <th scope="col">Email</th>
        <th scope="col">Bool</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for item in pagination %}
        <tr>
            <th scope="row">{{ item.index }}</td>
            <td>{{ item.indexstartat }}</td>
            <td>{{ item.integer }}</td>
            <td>{{ item.float }}</td>
            <td>{{ item.name }}</td>
            <td>{{ item.surname }}</td>
            <td>{{ item.fullname }}</td>
            <td>{{ item.email }}</td>
            <td>{% if item.bool %}Yes{% else %}No{% endif %}</td>
            <td>
                        <a href="{{ path('item_show', { 'index': item.index }) }}">
                            <svg id="i-search" viewBox="0 0 32 32" width="25" height="25" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                <circle cx="14" cy="14" r="12" />
                                <path d="M23 23 L30 30"  />
                            </svg></a>
                        <a href="{{ path('item_edit', { 'index': item.index }) }}">
                            <svg id="i-settings" viewBox="0 0 32 32" width="25" height="25" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                <path d="M13 2 L13 6 11 7 8 4 4 8 7 11 6 13 2 13 2 19 6 19 7 21 4 24 8 28 11 25 13 26 13 30 19 30 19 26 21 25 24 28 28 24 25 21 26 19 30 19 30 13 26 13 25 11 28 8 24 4 21 7 19 6 19 2 Z" />
                                <circle cx="16" cy="16" r="4" />
                            </svg></a>
            </td>
        </tr>
    {% endfor %}
</table>
{# display navigation #}
    <nav aria-label="...">
    <ul class="pagination">
    {{ knp_pagination_render(pagination) }}
    </ul>
    </nav>
{% endblock %}